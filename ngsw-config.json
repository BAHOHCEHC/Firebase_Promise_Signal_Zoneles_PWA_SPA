{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",

  "navigationUrls": [
    "/**",
    "!/**/*.*"
  ],

  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|otf|ttf|woff|woff2)"
        ]
      }
    }
  ],

  "dataGroups": [
    {
      "name": "external-images",
      "urls": [
        "https://firebasestorage.googleapis.com/**",
        "https://api-os-takumi-static.hoyoverse.com/**",
        "https://static.wikia.nocookie.net/**"
      ],
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 100,
        "maxAge": "30d",
        "timeout": "10s"
      }
    }
  ]
}
